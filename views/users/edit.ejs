<%- include('../partials/header') %>


<div class="onboard-container d-flex flex-column vh-100">
    <div style="flex-basis: 15%;"></div>
    <div class="onboard-form-container d-flex flex-column align-items-center justify-content-center px-3 py-3">
        <h1>Update your profile</h1>
        <form action="/users/<%= user._id %>?_method=PUT" method="POST">
            <div class="row my-2">
                <div class="col">
                    <label for="name">Name <span class="text-muted"><small>(Required)</small></span></label>
                    <input required type="text" class="form-control" id="name" name="name" value="<%= user.name %>">
                </div>
                <div class="col">
                    <label for="birthdate">Birthdate</label>
                    <input type="date" class="form-control" id="birthdate" name="birthdate" value="<%= user.birthdate %>">
                </div>
            </div>
            <div class="row my-2">
                <div class="col">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" disabled>
                </div>
                <div class="col">
                    <label for="hometown">Hometown <span class="text-muted"><small>(Required)</small></span></label>
                    <input required type="text" class="form-control" id="hometown" name="hometown" value="<%= user.hometown %>">
                </div>
            </div>
            <div class="row my-2">
                <div class="col">
                    <label for="bio">Bio</label>
                    <textarea class="form-control" rows="10" id="bio" name="bio"><%= user.bio %></textarea>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Get Started</button>
        </form>
    </div>
    <div style="flex-basis: 15%;"></div>
</div>


<%- include('../partials/footer') %>