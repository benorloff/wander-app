<%- include('../partials/header') %>

<div class="container">
    <div class="post-container">
        <h1><%= post.title %></h1>
        <p><%= post.content %></p>
        <form action="/posts/<%= post._id %>/edit" method="GET"><button class="btn btn-primary" type="submit">Edit</button></form>
        <form action="/posts/<%= post._id %>?_method=DELETE" method="GET"><button class="btn btn-primary" type="submit">Delete</button></form>
    </div>
</div>

<%- include('../partials/footer') %>